{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ai-screenshot",
  "title": "AI Screenshot",
  "description": "Modify screen captures using local AI models. No API keys needed!",
  "icon": "extension-icon.png",
  "author": "jochemloedeman",
  "categories": [
    "Design Tools",
    "Applications",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "modify",
      "title": "Modify Screenshot",
      "description": "Template with a plain detail view",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.1",
    "@raycast/utils": "^1.12.5",
    "dedent": "^1.5.1",
    "openai": "^4.47.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "client",
      "title": "Client",
      "description": "Either 'openai' or 'azure-openai'.",
      "type": "dropdown",
      "data": [
        {
          "value": "openai",
          "title": "OpenAI"
        }
      ],
      "required": true,
      "default": "openai"
    },
    {
      "name": "apiKey",
      "title": "API Key",
      "description": "An OpenAI API key.",
      "type": "password",
      "required": true
    }
  ]
}